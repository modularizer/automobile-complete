# Automobile Complete Environment Variables
# Copy this file to .env and modify as needed
# Values in .env will override these defaults

# ============================================================================
# File Paths
# ============================================================================

# Default wordlist file
AMC_WORDLIST_FILE=%AMC%/assets/wordlist.txt

# Default completion list file
AMC_COMPLETIONLIST_FILE=%AMC%/assets/completionlist.txt

# ============================================================================
# Wordlist Generation (amc wordlist / amc w)
# ============================================================================

# Language code for wordfreq wordlist (e.g., 'en', 'es', 'fr')
AMC_WORDLIST_LANG=en

# Regex pattern to filter words (default: starts with letter)
AMC_WORDLIST_PATTERN=^[a-zA-Z].+

# Maximum number of words to include (empty = all matching words)
AMC_WORDLIST_MAX_WORDS=

# Minimum word length (in characters)
AMC_WORDLIST_MIN_LENGTH=2

# Omit frequency information from output (true/false)
AMC_WORDLIST_NO_FREQS=false

# ============================================================================
# Wordlist Merge (amc wordlist-merge / amc wm)
# ============================================================================

# Omit frequency information from merged output (true/false)
AMC_WORDLIST_MERGE_NO_FREQS=false

# ============================================================================
# Completion List Generation (amc preprocess / amc c)
# ============================================================================

# Minimum probability threshold (0.0-1.0) for word completion (empty = uses subtree-threshold)
AMC_COMPLETIONLIST_WORD_THRESHOLD=

# Minimum probability threshold (0.0-1.0) for subtree completion
AMC_COMPLETIONLIST_SUBTREE_THRESHOLD=0.5

# Selected completion must be this many times more likely than alternatives (word)
AMC_COMPLETIONLIST_WORD_RATIO_THRESHOLD=1.0

# Selected completion must be this many times more likely than alternatives (subtree)
AMC_COMPLETIONLIST_SUBTREE_RATIO_THRESHOLD=1.0

# Minimum length of prefix before auto-completion
AMC_COMPLETIONLIST_MIN_PREFIX_LEN=2

# Minimum length of completion suffix
AMC_COMPLETIONLIST_MIN_SUFFIX_LEN=2

# Omit frequency information from output (true/false)
AMC_COMPLETIONLIST_NO_PRESERVE_FREQS=false

# ============================================================================
# Completion List Merge (amc preprocess-merge / amc cm)
# ============================================================================

# Omit frequency information from merged output (true/false)
AMC_COMPLETIONLIST_MERGE_NO_FREQS=false

# ============================================================================
# Interactive Run (amc run / amc r)
# ============================================================================

# Enable verbose output (show loading messages, etc.) (true/false)
AMC_RUN_NOISY=false
